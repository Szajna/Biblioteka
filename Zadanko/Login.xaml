<UserControl x:Class="Zadanko.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zadanko"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="Gray" CornerRadius="25" Margin="20">
            <StackPanel Margin="20">
                <Label Content="Zaloguj" HorizontalAlignment="Center" FontSize="30"></Label>
                <Separator></Separator>
                <Label Content="Email" HorizontalAlignment="Center" FontSize="20"></Label>
                <TextBox Name="txtMail" Width="200" Background="LightGray" FontSize="20"></TextBox>
                <Label Content="Haslo" HorizontalAlignment="Center" FontSize="20"></Label>
                <PasswordBox Name="txtHaslo" Width="200" Background="LightGray" FontSize="20"></PasswordBox>
                <Button Name="btnWyslij" Content="Wyslij" Click="btnWyslij_Click" Background="White" Width="50" Margin="20"></Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
